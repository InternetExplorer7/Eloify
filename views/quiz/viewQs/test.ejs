<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Eloify</title>

    <script
  src="https://code.jquery.com/jquery-3.1.1.min.js"
  integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
  crossorigin="anonymous"></script>

    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.6/semantic.min.css">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.4/semantic.min.js"></script>


  </head>
  <body>
    <!--  -->
    <div class="ui large top fixed hidden menu">
      <div class="ui container">
        <a class="item" href="/">Eloify</a>



        <div class="right menu">

          <div class="item">
            <a class="ui button" href="/user/logout">Log Out</a>
          </div>

          <div class="item">
            <a class="ui primary button" href="/user/me"> <i class="user icon"></i> Profile </a>
          </div>


        </div>
      </div>
    </div>

    <!--  -->
<br><br><br>
  <div class="ui container">
    <h1>User Submitted Questions </h1>

<a href="/user/createQs" class="ui button">Create Question</a>

<h2 style="text-align : center"><i>Questions</i></h2>

<div class="question" id="question1">

<% questions.map(function(question,num){ %>


  <form action="/user/qs/<%= question._id %>" method="post" class="ui form">

<!-- Question 1 -->

  <h3><%= num + 1 %>) <%= question.question %>  </h3>


    <h4><%= question.choices.a%>
<input type="checkbox" name="q1" value="a">
    </h4>

    <h4><%= question.choices.b%>
<input type="checkbox" name="q1" value="b" >
   </h4>

   <h4><%= question.choices.c%>
<input type="checkbox" name="q1" value="c" >
  </h4>

  <h4><%= question.choices.d%>
<input type="checkbox" name="q1" value="d" >
 </h4>


<p style="margin-top : 35px">Date Created : <%= question.date %></p>
 <p>Author : <a href="http://www.eloify.com/<%= question.username%>"><%= question.username %></a></p>

    <input style="text-align : center" type="submit" value="Answer" class="ui button green">
  <br><br><br>
  </form>
<% }) %>

</div>


 </div>

<br><br><br>
  </body>
</html>
